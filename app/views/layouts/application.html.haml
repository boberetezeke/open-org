%html
  %head
    %title Open-Org.Org
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags 

  %body
    - if current_user
      %a#signout{:href=>"#"}= "Sign Out"
    - else
      %a#signin{:href=>"#"}= "Sign In"
    = yield

:javascript
  current_user_id = "#{current_user ? current_user.id : ''}"
